model User {
  id         String     @id @default(cuid())
  username   String     @unique
  email      String     @unique
  password   String
  bio        String?
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  reputation Int        @default(0)
  avatar_url String?    @map("avatar_url")
  answers    Answer[]
  comments   Comment[]
  questions  Question[]
  votes      Vote[]
  @@map("users")
}
